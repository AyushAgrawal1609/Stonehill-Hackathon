<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Workplace Assistance</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/782400ee63.js"
      crossorigin="anonymous"
    ></script>
    <script>
      let name = "a";
      console.log("hello");
      function change(e) {
        console.log(e);
        name = e;
      }
      function submit() {
        console.log(name);
        console.log("hello");
        fetch("/toggle/" + name, {
          method: "GET",
        }).then(() => {
          console.log("hello2");
          document.getElementById("button").innerHTML =
            document.getElementById("button").innerHTML == "Submit"
              ? "Stop toggling"
              : "Submit";
        });
      }
    </script>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <nav
      class="navbar navbar-inverse navbar-expand-lg"
      style="background-color: blueviolet"
    >
      <div class="navbar-header">
        <a class="navbar-brand ms-4" style="font-family: lora" href="/"
          ><i class="fa-solid fa-globe" style="font-size: 1.75rem"> </i>
          SecureSphere</a
        >
      </div>
      <ul class="nav navbar-nav navbar-right nav-underline">
        <li class="nav-item m-1">
          <a class="nav-link text-white hover" aria-current="page" href="/"
            >Dashboard</a
          >
        </li>
        <li class="nav-item m-1 me-3">
          <a class="nav-link active text-dark" href="#">Employees</a>
        </li>
      </ul>
    </nav>
    <div
      class="container mt-4"
      style="display: flex; flex-direction: row; align-content: center"
    >
      <ul class="list-group container mb-4">
        <% Object.values(Employees).forEach(Employee => { %>
        <li
          class="list-group-item d-flex justify-content-between align-items-start"
        >
          <%= Employee.username %><% if (Employee.present) { %>
          <span class="badge text-bg-primary rounded-pill">Active</span>
          <% } else { %>
          <span class="badge text-bg-danger rounded-pill">Inactive</span>
          <% } %>
        </li>
        <% }) %>
      </ul>
    </div>
    <div class="accordion" id="accordionExample">
      <div class="accordion-item mx-3">
        <h2 class="accordion-header">
          <button
            class="accordion-button"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#collapseOne"
            aria-expanded="true"
            aria-controls="collapseOne"
          >
            Add Employee
          </button>
        </h2>
        <div
          id="collapseOne"
          class="accordion-collapse collapse show"
          data-bs-parent="#accordionExample"
        >
          <div class="accordion-body">
            <input
              type="text"
              onchange="change(this.value)"
              class="form-control"
              value="Employee Name"
              placeholder="Username"
              aria-label="Username"
              aria-describedby="basic-addon1"
            /><button
              id="button"
              onclick="submit()"
              class="btn btn-primary my-3"
            >Submit</button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
